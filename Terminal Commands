 2031  sudo chmod 666 /var/run/docker.sock
 2032  sudo usermod -aG docker ${USER}
 2033  sudo chmod 666 /var/run/docker.sock
 2034  sudo setfacl --modify user::rw /var/run/docker.sock
 2035  sudo newgroup docker
 2036  sudo chmod 666 /var/run/docker.sock
 2037  sudo usermod -aG docker ${USER}
